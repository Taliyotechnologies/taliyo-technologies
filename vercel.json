{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/dist" }
    }
  ],
  "routes": [
    { "src": "/(.*)\\.(.*)", "dest": "frontend/dist/$1.$2" },
    { "src": "/(.*)", "dest": "frontend/dist/index.html" }
  ],
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./frontend"
}
