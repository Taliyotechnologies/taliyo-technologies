{
  "version": 2,
  "installCommand": "npm install --workspaces --include=dev",
  "buildCommand": "VITE_ENABLE_PWA=false npm run build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    { "source": "/sitemap.xml", "destination": "https://taliyo-backend.onrender.com/sitemap.xml" },
    { "source": "/pages-sitemap.xml", "destination": "https://taliyo-backend.onrender.com/pages-sitemap.xml" },
    { "source": "/blog-sitemap.xml", "destination": "https://taliyo-backend.onrender.com/blog-sitemap.xml" },
    { "source": "/projects-sitemap.xml", "destination": "https://taliyo-backend.onrender.com/projects-sitemap.xml" },
    { "source": "/services-sitemap.xml", "destination": "https://taliyo-backend.onrender.com/services-sitemap.xml" }
  ],
  "headers": [
    {
      "source": "/index.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate" }
      ]
    },
    {
      "source": "/sw.js",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
