{
  "version": 2,
  "installCommand": "npm install --workspaces --include=dev",
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/dist",
  "routes": [
    { "src": "/(.*)\\.(.*)", "dest": "/$1.$2" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./frontend"
}
